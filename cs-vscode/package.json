{
  "name": "cs-search",
  "displayName": "cs - Semantic Code Search",
  "description": "Hybrid semantic + keyword code search powered by cs",
  "version": "0.1.0",
  "publisher": "beacon-bay",
  "license": "Apache-2.0 OR MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lwyBZss8924d/semcs.git",
    "directory": "cs-vscode"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "search",
    "semantic",
    "code search",
    "cs",
    "grep"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cs.search",
        "title": "cs: Search",
        "icon": "$(search)"
      },
      {
        "command": "cs.searchSelection",
        "title": "cs: Search Selection",
        "icon": "$(find-selection)"
      },
      {
        "command": "cs.reindex",
        "title": "cs: Reindex",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cs-search-container",
          "title": "cs Search",
          "icon": "resources/cs-icon.svg"
        }
      ]
    },
    "views": {
      "cs-search-container": [
        {
          "type": "webview",
          "id": "cs.searchView",
          "name": "Search"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cs.search",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;"
      },
      {
        "command": "cs.searchSelection",
        "key": "ctrl+shift+'",
        "mac": "cmd+shift+'"
      }
    ],
    "configuration": {
      "title": "cs Search",
      "properties": {
        "cs.mode": {
          "type": "string",
          "enum": ["cli", "mcp"],
          "default": "cli",
          "description": "Integration mode: CLI (spawn binary) or MCP (connect to server)"
        },
        "cs.cliPath": {
          "type": "string",
          "default": "cs",
          "description": "Path to cs binary"
        },
        "cs.mcp.command": {
          "type": "string",
          "default": "cs",
          "description": "MCP server command"
        },
        "cs.mcp.args": {
          "type": "array",
          "default": ["--serve"],
          "description": "MCP server arguments"
        },
        "cs.index.root": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "Root folder for indexing"
        },
        "cs.defaultMode": {
          "type": "string",
          "enum": ["hybrid", "semantic", "regex"],
          "default": "semantic",
          "description": "Default search mode"
        },
        "cs.pageSize": {
          "type": "number",
          "default": 25,
          "description": "Number of results to display at once"
        },
        "cs.threshold": {
          "type": "number",
          "default": 0.6,
          "description": "Minimum relevance threshold for hybrid/semantic search (0.0-1.0)"
        },
        "cs.topK": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of results to fetch from cs (higher = more results but slower)"
        },
        "cs.contextLines": {
          "type": "number",
          "default": 4,
          "minimum": 0,
          "maximum": 20,
          "description": "Number of lines of context to show before and after each match (0-20)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.0",
    "@vscode/vsce": "^2.24.0"
  },
  "dependencies": {
    "jsonrpc-lite": "^2.2.0"
  }
}
